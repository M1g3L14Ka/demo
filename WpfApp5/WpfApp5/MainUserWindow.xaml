<Window x:Class="WpfApp5.MainUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainUserWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="ТехСервис" FontSize="20" Foreground="Green" Margin="6,6,6,6"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Width="550" Height="350">
            <Button Name="createNewRequestBtn" Content="Создать новую заявку" Background="White" Width="220" Foreground="Green" 
                    FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,115,15,10" 
                    Click="createNewRequestBtn_Click"/>
            <Button Name="checkMyRequest" Content="Мои заявки" Background="White" Foreground="Green" FontSize="20" Width="120" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,25,15,10" Click="checkMyRequest_Click"/>
        </StackPanel>
    </Grid>
</Window>
